<table class="table table-striped table-sm shadow p-3 mt-4 mb-5">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :id, 'ID') %></th> <!-- Image -->
      <th scope="col"><%= sort_link(@q, :name) %></th>
      <th scope="col"><%= sort_link(@q, :type_id, 'Type') %></th>
      <th scope="col"><%= sort_link(@q, :stars, 'Rarity') %></th>
      <th scope="col" class="text-center">Stats</th>
      <th scope="col">Source</th>
    </tr>
  </thead>
  <tbody>
    <%= render 'table_data', cards: @cards %>
  </tbody>
</table>
