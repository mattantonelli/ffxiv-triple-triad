<div class="col-12">
  <table class="table table-striped table-sm shadow p-3 mt-4 mb-5">
    <thead>
      <tr>
        <th scope="col"></th> <!-- Image -->
        <th scope="col"><%= sort_link(@q, :name) %></th>
        <th scope="col"><%= sort_link(@q, :type_id, 'Type') %></th>
        <th scope="col"><%= sort_link(@q, :stars, 'Rarity') %></th>
        <th scope="col" class="text-center">Stats</th>
        <th scope="col">Source</th>
        <th scope="col"><%= sort_link(@q, :patch) %></th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each do |card| %>
        <tr>
          <td><%= small_image(card) %></td>
          <td><%= card.name %></td>
          <td><%= type_image(card) %></td>
          <td><%= stars(card) %></td>
          <td><%= render 'cards/stats', card: card %></td>
          <td><%= source(card) %></td>
          <td><%= card.patch %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
