<div class="card">
  <div class="card-header">
    <div class="d-flex">
      <%= link_to :admin_users, class: 'unstyled mr-auto pt-1' do %>
        <h5>Manage Users</h5>
      <% end %>
      <%= search_form_for(@q, url: admin_users_path, class: 'form form-inline') do |f| %>
        <%= f.search_field :username_cont, placeholder: 'Username', size: 30, class: 'form-control form-control-sm mr-2' %>
        <%= f.submit 'Search', class: 'btn btn-secondary btn-sm' %>
      <% end %>
    </div>
  </div>
  <div class="card-body card-table">
    <table class="table table-striped table-sm">
      <tr>
        <th></th> <!-- Avatar -->
        <th>Username</th>
        <th>Discord ID</th>
        <th>Last Signed In</th>
        <th>IP Address</th>
        <th>Cards</th>
        <th>Public</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag(user.avatar_url, class: 'avatar') if user.avatar_url.present? %></td>
          <td><%= user.username %>#<%= user.discriminator %></td>
          <td><%= user.uid %></td>
          <td><%= user.current_sign_in_at %></td>
          <td><%= user.current_sign_in_ip %></td>
          <td><%= user.cards.count %></td>
          <td><%= fa_icon(user.public_cards ? 'check-square' : 'square') %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="card-footer d-flex justify-content-center mb-0">
    <%= will_paginate(@users) %>
  </div>
</div>
