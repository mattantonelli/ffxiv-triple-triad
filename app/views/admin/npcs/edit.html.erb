<div class="row">
  <div class="col-12 col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">Edit NPC</h5>
      </div>
      <div class="card-body py-3">
        <%= form_for(@npc, url: admin_npc_path, html: { class: 'form' }) do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :quest %>
            <%= f.text_field :quest, value: @npc.quest&.name_en, class: 'form-control' %>
          </div>
          <div class="form-row mb-3 align-items-end">
            <div class="col-3">
              <%= f.label :location %>
              <div class="input-group">
                <%= f.number_field :x, class: 'form-control' %>
                <div class="input-group-append">
                  <span class="input-group-text">X</span>
                </div>
              </div>
            </div>
            <div class="col-3">
              <div class="input-group">
                <%= f.number_field :y, class: 'form-control' %>
                <div class="input-group-append">
                  <span class="input-group-text">Y</span>
                </div>
              </div>
            </div>
            <div class="col-3 offset-1">
              <div class="form-group mb-0">
                <%= f.label :patch %>
                <%= f.text_field :patch, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-check form-check-inline">
            <%= f.check_box :excluded, class: 'form-check-input checkbox' %>
            <%= f.label :excluded, class: 'form-check-label' %>
          </div>
          <div class="text-right mt-4">
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
